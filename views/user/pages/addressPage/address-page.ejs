<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../../partials/head') %>
    <link rel="stylesheet" href="/tas_user/css/address-variables.css" />
    <link rel="stylesheet" href="/tas_user/css/address-styles.css" />
  </head>
  <body>
    <header class="main_menu home_menu">
      <%- include('../../partials/header.ejs') %>
    </header>
    <nav class="profile-nav">
      <div class="profile-nav-container">
        <h1 class="profile-nav-title">Account Settings</h1>
        <div class="profile-nav-links">
          <a href="/profile" class="profile-nav-link">Profile</a>
          <a class="profile-nav-link active">Addresses</a>
        </div>
      </div>
    </nav>
    <div class="address-container">
      <header class="address-header">
        <h1>Addresses</h1>
        <button id="address-add-btn" class="address-btn-primary">
          Add New Address
        </button>
      </header>

      <section class="address-list" id="address-list"></section>

      <div id="address-modal" class="address-modal">
        <div class="address-modal-content">
          <h2>Add New Address</h2>
          <form id="address-form">
            <div class="address-form-row">
              <div class="address-form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" />
              </div>
              <div class="address-form-group">
                <label for="mobile">Mobile</label>
                <input type="text" id="mobile" />
              </div>
              <div class="address-form-group">
                <label for="address">Address</label>
                <input type="text" id="address" />
              </div>
              <div class="address-form-group">
                <label for="city">City</label>
                <input type="text" id="city" />
              </div>
              <div class="address-form-group">
                <label for="state">State</label>
                <input type="text" id="state" />
              </div>
              <div class="address-form-group">
                <label for="country">country</label>
                <input type="text" id="country" />
              </div>
              <div class="address-form-group">
                <label for="pincode">Pin Code</label>
                <input type="text" id="pincode" />
              </div>
              <div class="address-form-group">
                <label for="landmark">Landmark</label>
                <input type="text" id="landmark" />
              </div>
            </div>
            <div class="address-form-actions">
              <button
                type="button"
                class="address-btn-secondary"
                id="address-cancel-btn"
              >
                Cancel
              </button>
              <button type="submit" class="address-btn-primary">
                Save Address
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/flashMessage.js"></script>

    <script src="tas_user/js/address-script.js"></script>
    <%- include('../../../partials/scripts') %>
  </body>
</html>
