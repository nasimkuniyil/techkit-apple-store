<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../partials/head') %>
    <link rel="stylesheet" href="/tas_user/css/order.css">
    <link rel="stylesheet" href="/tas_user/css/wallet-style.css">
    <link rel="stylesheet" href="/admin/css/pagination.css" />
</head>
<body>
    <header class="main_menu home_menu">
        <%- include('../../partials/header.ejs') %>
      </header>
    <div class="order-history-page">
        <div class="order-history-container">
          <div class="wallet-header">
            <h1 class="wallet-title">Wallet</h1>
            <div class="wallet-balance">
              <div class="balance-label">Available Balance</div>
              <div class="balance-amount">₹<%- balance %></div>
            </div>
          </div>

            <div id="ordersList">
                <!-- Orders will be populated by JavaScript -->
                <div class="wallet-container">
                  
                
                  <!-- <div class="transaction-filters">
                    <button class="filter-btn active">All Transactions</button>
                    <button class="filter-btn">Refunds</button>
                    <button class="filter-btn">Withdrawals</button>
                  </div> -->
                
                  <div class="transaction-list">
                    <% if(transactions){ %>
                      <% transactions.forEach(trns =>{ %>
                        <div class="transaction-item">
                          <div class="transaction-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                              <path d="M12 2L2 7L12 12L22 7L12 2Z"></path>
                              <path d="M2 17L12 22L22 17"></path>
                              <path d="M2 12L12 17L22 12"></path>
                            </svg>
                          </div>
                          <div class="transaction-details">
                            <div class="transaction-title"><%- trns.type %></div>
                            <div class="transaction-date"><%- trns.date.toString().split("T")[0] %></div>
                          </div>
                          <div class="transaction-amount refund">₹<%- trns.amount %></div>
                        </div>
                      <% }) %>
                    <% } %>
                </div>
                <div class="pagination minimalist-apple-pagination">
                  <% if(currentPage && totalPage) { %> 
                    <% for(let i=1; i<=totalPage; i++){ %>
                      <a href="/wallet?page=<%-i%>" class="<%- currentPage == i ? 'active' : '' %>"><%-i%></a>
                    <% } %>
                  <% } %>
              </div>
                
            </div>
        </div>
    </div>

    <footer><%- include('../../partials/footer') %></footer>

    <script src="/flashMessage.js"></script>
<!-- 
    <script src="/tas_user/js/order.js"></script> -->
</body>
</html>