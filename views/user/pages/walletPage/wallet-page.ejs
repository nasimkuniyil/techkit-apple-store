                    <button class="filter-btn">Refunds</button>
                    <button class="filter-btn">Withdrawals</button>
                  </div>
                
                  <div class="transaction-list">
                    <% if(transactions){ %>
                      <% transactions.forEach(trns =>{ %>
                        <div class="transaction-item">
                          <div class="transaction-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                              <path d="M12 2L2 7L12 12L22 7L12 2Z"></path>
                              <path d="M2 17L12 22L22 17"></path>
                              <path d="M2 12L12 17L22 12"></path>
                            </svg>
                          </div>
                          <div class="transaction-details">
                            <div class="transaction-title"><%- trns.type %></div>
                            <div class="transaction-date"><%- trns.date.toString().split("T")[0] %></div>
                          </div>
                          <div class="transaction-amount refund">₹<%- trns.amount %></div>
                        </div>
                      <% }) %>
                    <% } %>
                
