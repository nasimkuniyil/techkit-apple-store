<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../../../partials/head') %>
    <link rel="stylesheet" href="/tas_user/css/profile-style.css" />
    <link rel="stylesheet" href="/tas_user/css/address-variables.css" />
  </head>
  <body>
    <header class="main_menu home_menu">
      <%- include('../../partials/header.ejs') %>
    </header>
    <nav class="profile-nav">
      <div class="profile-nav-container">
        <h1 class="profile-nav-title">Account Settings</h1>
        <div class="profile-nav-links">
          <a class="profile-nav-link active">Profile</a>
          <a href="/address" class="profile-nav-link">Addresses</a>
        </div>
      </div>
    </nav>

    <div class="profile-show-container">
      <div class="profile-show-header">
        <div class="profile-avatar">
          <span>--</span>
        </div>
        <div class="profile-show-actions">
          <button id="profile-show-edit-btn" class="profile-show-btn-primary">
            Edit Profile
          </button>
        </div>
      </div>

      <div class="profile-show-content">
        <div class="profile-show-section">
          <h2>Personal Information</h2>
          <div class="profile-show-grid">
            <div class="profile-show-item">
              <span class="profile-show-label">First Name</span>
              <span class="profile-show-value" id="display-firstname"
                >loading...</span
              >
            </div>
            <div class="profile-show-item">
              <span class="profile-show-label">Last Name</span>
              <span class="profile-show-value" id="display-lastname">loading...</span>
            </div>
            <div class="profile-show-item">
              <span class="profile-show-label">Email</span>
              <span class="profile-show-value" id="display-email"
                >loading...</span
              >
            </div>
            <div class="profile-show-item">
              <span class="profile-show-label">Mobile</span>
              <span class="profile-show-value" id="display-mobile"
                >loading...</span
              >
            </div>
          </div>
        </div>

        <div class="profile-show-section">
          <h2>Security</h2>
          <div class="profile-show-security">
            <div class="profile-show-item">
              <span class="profile-show-label">Password</span>
              <span class="profile-show-value">••••••••</span>
              <button
                id="profile-show-change-password"
                class="profile-show-btn-text"
              >
                Change Password
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Profile Modal -->
    <div id="edit-profile-modal" class="profile-show-modal">
      <div class="profile-show-modal-content">
        <div class="profile-show-modal-header">
          <h2>Edit Profile</h2>
          <button class="profile-show-modal-close" id="edit-profile-close">
            &times;
          </button>
        </div>
        <form id="edit-profile-form">
          <div class="profile-show-form-row">
            <div class="profile-show-form-group">
              <label for="edit-firstname">First Name</label>
              <input type="text" id="edit-firstname" required />
            </div>
            <div class="profile-show-form-group">
              <label for="edit-lastname">Last Name</label>
              <input type="text" id="edit-lastname" required />
            </div>
          </div>
          <div class="profile-show-form-group">
            <label for="edit-email">Email</label>
            <input type="email" id="edit-email" disabled />
          </div>
          <div class="profile-show-form-group">
            <label for="edit-mobile">Mobile</label>
            <input type="tel" id="edit-mobile" required />
          </div>
          <div class="profile-show-form-actions">
            <button
              type="button"
              class="profile-show-btn-secondary"
              id="edit-profile-cancel"
            >
              Cancel
            </button>
            <button type="submit" class="profile-show-btn-primary">
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Change Password Modal -->
    <div id="change-password-modal" class="profile-show-modal">
      <div class="profile-show-modal-content">
        <div class="profile-show-modal-header">
          <h2>Change Password</h2>
          <button class="profile-show-modal-close" id="change-password-close">
            &times;
          </button>
        </div>
        <form id="change-password-form">
          <div class="profile-show-form-group">
            <label for="current-password">Current Password</label>
            <input type="password" id="current-password" required />
          </div>
          <div class="profile-show-form-group">
            <label for="new-password">New Password</label>
            <input type="password" id="new-password" required />
          </div>
          <div class="profile-show-form-group">
            <label for="confirm-password">Confirm New Password</label>
            <input type="password" id="confirm-password" required />
          </div>
          <div class="profile-show-form-actions">
            <button
              type="button"
              class="profile-show-btn-secondary"
              id="change-password-cancel"
            >
              Cancel
            </button>
            <button type="submit" class="profile-show-btn-primary">
              Update Password
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="/tas_user/js/profile-script.js"></script>
     <%- include('../../../partials/scripts') %>
  </body>
</html>
