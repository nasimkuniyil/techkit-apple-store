<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../partials/head') %>
    <link rel="stylesheet" href="/tas_user/css/order.css">
    <link rel="stylesheet" href="/tas_user/css/wishlist.css">
</head>
<body>
    <header class="main_menu home_menu">
        <%- include('../../partials/header.ejs') %>
      </header>
    <div class="order-history-page">
        <div class="order-history-container">
            <div class="order-history-header">
                <h1>Wishlist</h1>
            </div>

            <div id="ordersList">
                <!-- Orders will be populated by JavaScript -->
                <div class="wishlist-container">
                    <div class="wishlist-grid">
                      <!-- Items -->
                      <div class="wishlist-item">
                        <div class="card-skelton"></div>
                      </div>
                      <div class="wishlist-item">
                        <div class="card-skelton"></div>
                      </div>
                      <div class="wishlist-item">
                        <div class="card-skelton"></div>
                      </div>
                  
                    <!-- Empty State -->
                    <div class="empty-wishlist" style="display: none;">
                      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                      </svg>
                      <h2>Your Wishlist is Empty</h2>
                      <p>Save items you'd like to buy later</p>
                      <button class="continue-shopping-btn">Continue Shopping</button>
                    </div>
                  </div>
            </div>

            <!-- <button class="load-more" id="loadMoreBtn">Load More Orders</button> -->
        </div>
    </div>

    <footer><%- include('../../partials/footer') %></footer>

    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
    <script src="/flashMessage.js"></script>
<!-- 
    <script src="/tas_user/js/order.js"></script> -->
    <script src="tas_user/js/wishlist.js"></script>
</body>
</html>