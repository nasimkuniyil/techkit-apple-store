<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <link rel="stylesheet" href="/message.css">
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/couponAdd.css" />
    <link rel="stylesheet" href="/admin/css/formValidation.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="coupon-container">
            <h1 class="form-title">Create New Coupon</h1>
            <form id="couponForm" onsubmit="validateForm(event)">
              <div class="form-group">
                <label for="couponCode">Coupon Code</label>
                <input type="text" id="couponCode" name="couponCode" required 
                       placeholder="Enter coupon code (e.g., SUMMER2025)">
                <div class="error" id="codeError"></div>
              </div>
          
              <div class="form-row">
                <div class="form-group">
                  <label for="discountValue">Discount Value</label>
                  <input type="number" id="discountValue" name="discountValue" required
                         placeholder="Enter discount value">
                  <div class="error" id="valueError"></div>
                </div>
              </div>
          
              <div class="form-row">
                <div class="form-group">
                  <label for="expirationDate">Expiration Date</label>
                  <input type="date" id="expirationDate" name="expirationDate" required>
                  <div class="error" id="dateError"></div>
                </div>
          
                <div class="form-group">
                  <label for="minPurchase">Minimum Purchase Amount</label>
                  <input type="number" id="minPurchase" name="minPurchase" 
                         placeholder="Enter minimum purchase amount">
                         <div class="error" id="minPurchaseError"></div>
                </div>
              </div>
          
              <div class="form-group">
                <label for="usageLimit">Usage Limit</label>
                <input type="number" id="usageLimit" name="usageLimit" required
                       placeholder="Enter maximum number of uses">
                <div class="error" id="limitError"></div>
              </div>
          
              <button type="submit" class="submit-btn">Create Coupon</button>
            </form>
          </div>
      </main>
    </div>
    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <script src="/flashMessage.js"></script>
    <script src="/admin/js/couponAdd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>

  </body>
</html>
