<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/message.css">
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/category.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <div class="header-section">
            <h1 class="page-title">Categories</h1>
            <a href="/admin/category/add" class="add-category-btn"
              >+ Add Category</a
            >
          </div>
          <!-- Rest of your page content -->
          <div class="category-container">
            <div class="category-card">
              <table class="category-table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Products</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if( categories ){ %> 
                    <% categories.forEach((cat,index) => { %>
                  <tr>
                    <td>
                      <span class="category-id"><%- index+1 %></span>
                    </td>
                    <td>
                      <div
                        style="display: flex; align-items: center; gap: 1rem"
                      >
                        <span><%- cat.category_name %></span>
                      </div>
                    </td>
                    <td>
                      <span class="products-count">24 products</span>
                    </td>
                    <td><%-cat.description %></td>
                    <td>
                      <span class="status-badge <%= cat.deleted ?'status-inactive ':'status-active' %>"><%= cat.deleted ? 'inactive' : 'active' %></span>
                    </td>
                    <td>
                      <div class="action-cell">
                        <a href="/admin/category/edit?id=<%- cat._id %>" class="action-btn edit-btn">Edit</a>
                        <%if(cat.deleted){%>
                          <button class="action-btn delete-btn" id="category-del-btn" onclick="unblockCategory(event, '<%- cat._id %>')">Unblock</button>
                        <%}else{%>
                          <button class="action-btn delete-btn" id="category-del-btn" onclick="blockCategory(event, '<%- cat._id %>')">Block</button>
                        <%}%>
                      </div>
                    </td>
                  </tr>
                  <% }) %> 
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/category.js"></script>
  </body>
</html>
