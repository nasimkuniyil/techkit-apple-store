<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/admin/css/productForm.css" />
    <link href="/admin/cropperJS/cropper.css" rel="stylesheet" />
    <link rel="stylesheet" href="/tas_admin/productStyle.css" />
  </head>
  <body>
    <!-- Crop Modal (same as add page) -->
   <!-- Crop Modal -->
<div class="modal fade" id="cropModal" tabindex="-1" aria-labelledby="cropModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cropModalLabel">Crop Image</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- This is the image element that was null -->
        <img id="image" src="" alt="Image to crop" style="max-width: 100%;">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="cropBtn">Crop</button>
      </div>
    </div>
  </div>
</div>

    <main class="py-3" style="width: 500px; margin: auto">
      <div class="bg-light">
        <h3 class="text-primary fw-bolder py-2">Edit Product</h3>
      </div>
      <form id="prod-form" action="/admin/product/edit?id=<%= product._id %>" method="POST" enctype="multipart/form-data">
        <div class="row py-4">
          <!-- Product Details -->
          <div class="form-group py-2">
            <label for="" class="form-label">Product name</label>
            <input type="text" class="form-control" name="product_name" value="<%= product.product_name %>" required />
          </div>
          <div class="form-group py-2">
            <label class="form-label">Quantity</label>
            <input type="number" class="form-control" name="quantity" value="<%= product.quantity %>" required />
          </div>
          <div class="form-group py-2">
            <label class="form-label">Color</label>
            <input type="text" class="form-control" name="color" value="<%= product.color %>" required />
          </div>
          <div class="form-group py-2">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" name="price" value="<%= product.price %>" required />
          </div>
          <div class="form-group py-2">
            <label class="form-label">Category</label>
            <select name="category" class="dropdown form-control" required>
              <option value="">Select</option>
              <% for(let category of categories){ %>
              <option value="<%- category._id%>" <%= product.category.equals(category._id) ? 'selected' : '' %>>
                <%- category.category_name %>
              </option>
              <%}%>
            </select>
          </div>
          <div class="form-group py-2">
            <label class="form-label">Description</label>
            <textarea class="description_area form-control" name="description" rows="4" required><%= product.description %></textarea>
          </div>

          <!-- Existing Images Section -->
          <div class="form-group py-2">
            <label class="form-label">Existing Images</label>
            <div class="existing-images d-flex flex-wrap gap-3">
              <% product.images.forEach((image, index) => { %>
                <div class="existing-image-box" data-image-id="<%= image.split("/").pop() %>">
                  <img src="../../<%= image %>" alt="Product Image" class="preview-image">
                  <input type="hidden" name="existing_images[]" value="<%= image._id %>">
                  <button type="button" class="remove-existing-btn" onclick="removeExistingImage(this)">×</button>
                  <% if(index === 0) { %>
                    <p class="main-image-label">Main image</p>
                  <% } %>
                </div>
              <% }) %>
            </div>
          </div>

          <!-- New Images Section -->
          <div class="form-group py-2">
            <label class="form-label">Add New Images</label>
            <div class="upload-section d-flex flex-wrap gap-3">
              <% const remainingSlots = 4 - product.images.length %>
              <% for(let i = 0; i < remainingSlots; i++) { %>
                <div class="upload-box <%= i === remainingSlots - 1 ? 'add-more' : '' %>">
                  <input type="file" accept="image/*" name="new_images">
                  <div class="plus-icon"></div>
                  <button type="button" class="remove-btn">×</button>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <div class="form-group text-center">
          <a href="/admin/products" class="btn btn-outline-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
      </form>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js"></script>
    <script src="/admin/cropperJS/cropper.js"></script>
    <script src="/admin/js/productEdit.js"></script>
  </body>
</html>