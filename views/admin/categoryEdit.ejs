 <!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/form.css" />
    <link rel="stylesheet" href="/admin/css/formValidation.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>
        
        <!-- Page Specific Content -->
        <div class="form-container">
          <div class="form-header">
            <h1 class="form-title">Edit Category</h1>
          </div>

          <form id="categoryEditForm" action="/admin/category/edit?id=<%-category._id%>">
            <!-- Basic Information Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Category Name</label>
                <input
                  type="text"
                  id="category-name"
                  class="form-input"
                  name="category_name"
                  placeholder="Category name"
                  value="<%- category.category_name %>"
                />
              </div>

              <div class="form-group">
                <label class="form-label">Description</label>
                <textarea
                  id="description"
                  class="form-input"
                  name="description"
                  placeholder="Add description"
                  ><%- category.description %></textarea>
              </div>
            </div>
            <div class="form-actions">
              <button
                type="button"
                class="btn btn-secondary"
                onclick="handleCancel()"
              >
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">
                Save Category
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>
    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <script src="/admin/js/category.js"></script>
  </body>
</html>
