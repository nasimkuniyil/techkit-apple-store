<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/category.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <div class="header-section">
            <h1 class="page-title">Colors</h1>
            <button class="add-category-btn">+ Add Color</button>
          </div>
          <!-- Rest of your page content -->
          <div class="category-container">
            <div class="category-card">
              <table class="category-table">
                <thead>
                  <tr>
                    <th>Color Code</th>
                    <th>Color Name</th>
                    <th>Color</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% colors.forEach(color=>{ %>
                    <tr>
                      <td>
                        <span class="category-id">#<%-color.color_code%></span>
                      </td>
                      <td>
                        <div
                          style="display: flex; align-items: center; gap: 1rem"
                        >
                          <span><%-color.color_name%></span>
                        </div>
                      </td>
                      <td>
                        <span class="products-count" style="background-color: #<%-color.color_code%>; width:25px; height:25px; display:block;"></span>
                      </td>
                      <td>
                        <div class="action-cell">
                          <button class="action-btn edit-btn">Edit</button>
                          <button class="action-btn delete-btn">Delete</button>
                        </div>
                      </td>
                    </tr>
                  <%})%>
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <!-- <script src="js/products.js"></script> -->
  </body>
</html>
