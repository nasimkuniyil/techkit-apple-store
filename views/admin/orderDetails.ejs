<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/orderDetails.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <h1>Order Details</h1>
          <!-- Rest of your page content -->
          <div class="order-detail-container">

            <div class="detail-header">
              <div class="header-content">
                <div>
                  <h1 class="order-title"><%- orderData.orderId %></h1>
                  <p class="order-date">Placed on <%- orderData.createdAt.toISOString().substring(0,10) %></p>
                </div>
                <div class="status-section">
                  <span class="current-status status-<%- orderData.orderStatus.toLowerCase() %>"
                    ><%- orderData.orderStatus %></span
                  >
                  <div>
                    <select class="status-select" onchange="changeOrderStatus(event, '<%-orderData._id%>')">
                      <option value="pending" <%= orderData.orderStatus == 'Pending' ? 'selected' : "" %> >Pending</option>
                      <option value="processing" <%= orderData.orderStatus == 'Processing' ? 'selected' : "" %> >Processing</option>
                      <option value="shipped" <%= orderData.orderStatus == 'Shipped' ? 'selected' : "" %> >Shipped</option>
                      <option value="delivered" <%= orderData.orderStatus == 'Delivered' ? 'selected' : "" %> >Delivered</option>
                      <option value="cancelled" <%= orderData.orderStatus == 'Cancelled' ? 'selected' : "" %> >Cancelled</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <div class="detail-card">
              <h2 class="card-title">Order Items</h2>
              <table class="items-table">
                  <thead>
                      <tr>
                          <th>Product</th>
                          <th>Quantity</th>
                          <th>Price</th>
                          <th>Current Status</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>
                              <div class="product-name">iPhone 15 Pro Max</div>
                              <div class="product-delivery">Estimated delivery: Jan 17, 2025</div>
                              <a href="#" class="tracking-info">Track Package - UPS #1234567890</a>
                          </td>
                          <td>1</td>
                          <td>$1,199</td>
                          <td class="status-cell">
                              <span class="product-status status-shipped">Shipped</span>
                              <select class="status-dropdown">
                                  <option value="pending">Pending</option>
                                  <option value="processing">Processing</option>
                                  <option value="shipped" selected>Shipped</option>
                                  <option value="delivered">Delivered</option>
                                  <option value="cancelled">Cancelled</option>
                              </select>
                              <button class="save-status-btn">Update Status</button>
                              <button class="status-history-btn">
                                  <span>View Status History</span>
                                  <span>↓</span>
                              </button>
                          </td>
                          <td>
                              <button class="cancel-item-btn" disabled>Cancel Item</button>
                          </td>
                      </tr>
                      <tr>
                          <td>
                              <div class="product-name">AppleCare+</div>
                              <div class="product-delivery">Digital Delivery</div>
                          </td>
                          <td>1</td>
                          <td>$199</td>
                          <td class="status-cell">
                              <span class="product-status status-delivered">Delivered</span>
                              <select class="status-dropdown">
                                  <option value="pending">Pending</option>
                                  <option value="processing">Processing</option>
                                  <option value="delivered" selected>Delivered</option>
                                  <option value="cancelled">Cancelled</option>
                              </select>
                              <button class="save-status-btn" disabled>Update Status</button>
                              <button class="status-history-btn">
                                  <span>View Status History</span>
                                  <span>↓</span>
                              </button>
                          </td>
                          <td>
                              <button class="cancel-item-btn" disabled>Cancel Item</button>
                          </td>
                      </tr>
                      <tr>
                          <td>
                              <div class="product-name">iPhone 15 Pro Max Case</div>
                              <div class="product-delivery">Estimated delivery: Jan 20, 2025</div>
                          </td>
                          <td>1</td>
                          <td>$49</td>
                          <td class="status-cell">
                              <span class="product-status status-processing">Processing</span>
                              <select class="status-dropdown">
                                  <option value="pending">Pending</option>
                                  <option value="processing" selected>Processing</option>
                                  <option value="shipped">Shipped</option>
                                  <option value="delivered">Delivered</option>
                                  <option value="cancelled">Cancelled</option>
                              </select>
                              <button class="save-status-btn">Update Status</button>
                              <button class="status-history-btn">
                                  <span>View Status History</span>
                                  <span>↓</span>
                              </button>
                          </td>
                          <td>
                              <button class="cancel-item-btn">Cancel Item</button>
                          </td>
                      </tr>
                  </tbody>
              </table>

              <div class="price-breakdown">
                <div class="price-row">
                  <span>Subtotal</span>
                  <span>$1,447</span>
                </div>
                <div class="price-row">
                  <span>Shipping</span>
                  <span>Free</span>
                </div>
                <div class="price-row">
                  <span>Tax</span>
                  <span>$130.23</span>
                </div>
                <div class="total-row">
                  <span>Total</span>
                  <span>$1,577.23</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/orderDetails.js"></script>
  </body>
</html>
