<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/form.css" />
    <link rel="stylesheet" href="/admin/css/formValidation.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css"
    />
  </head>
  <body>
    <!-- Croper modal start -->
    <div id="cropperModal" class="cropper-modal">
      <div class="cropper-modal-content">
        <div class="cropper-modal-header">
          <h2>Crop Image</h2>
          <button class="close-modal">&times;</button>
        </div>
        <div class="cropper-modal-body">
          <div class="cropper-container">
            <img id="cropperImage" src="" alt="Image to crop" />
          </div>
          <div class="cropper-controls">
            <button class="btn btn-secondary" id="rotateLeft">
              <i class="fas fa-undo"></i>
            </button>
            <button class="btn btn-secondary" id="rotateRight">
              <i class="fas fa-redo"></i>
            </button>
            <button class="btn btn-secondary" id="flipHorizontal">
              <i class="fas fa-arrows-alt-h"></i>
            </button>
            <button class="btn btn-secondary" id="flipVertical">
              <i class="fas fa-arrows-alt-v"></i>
            </button>
            <button class="btn btn-secondary" id="zoomIn">
              <i class="fas fa-search-plus"></i>
            </button>
            <button class="btn btn-secondary" id="zoomOut">
              <i class="fas fa-search-minus"></i>
            </button>
          </div>
        </div>
        <div class="cropper-modal-footer">
          <button class="btn btn-secondary" id="cancelCrop">Cancel</button>
          <button class="btn btn-primary" id="cropImage">Crop Image</button>
        </div>
      </div>
    </div>
    <!-- Croper modal end -->
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="form-container">
          <div class="form-header">
            <h1 class="form-title">Add New Product</h1>
            <p class="form-subtitle">
              Fill in the information below to create a new product
            </p>
          </div>

          <form id="productForm" enctype="multipart/form-data">
            <!-- Basic Information Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Product Name</label>
                <input
                  type="text"
                  id="product-name"
                  class="form-input"
                  name="productName"
                />
              </div>

              <div class="form-group">
                <label class="form-label">Description</label>
                <textarea
                  id="description"
                  class="form-input"
                  name="description"
                ></textarea>
              </div>
            </div>

            <!-- Category Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Product Category</label>
                <select
                  class="form-select"
                  id="category-select"
                  name="category"
                >
                  <option value="" disabled selected>Select Category</option>
                  <% for(let category of categories){ %>
                  <option value="<%- category._id%>">
                    <%- category.category_name %>
                  </option>
                  <%}%>
                </select>
              </div>
            </div>

            <!-- Color Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Product Color</label>
                <select class="form-select" id="color-select" name="color">
                  <option value="" disabled selected>Select Color</option>
                  <% for(let color of colors){ %>
                  <option value="<%- color._id%>">
                    <%- color.color_name %>
                  </option>
                  <%}%>
                </select>
              </div>
            </div>

            <!-- Pricing Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Price (â‚¹)</label>
                <input
                  id="price"
                  type="number"
                  class="form-input"
                  name="price"
                  step="0.01"
                />
              </div>
            </div>

            <!-- Quantity Section -->
            <div class="form-section">
              <div class="form-group">
                <label class="form-label">Quantity</label>
                <input
                  id="quantity"
                  type="number"
                  class="form-input"
                  name="quantity"
                  step="1"
                />
              </div>
            </div>

            <!-- Images Section -->
            <div class="form-section">
              <h2 class="section-title">Product Images</h2>
              <p class="form-hint">
                Upload at least 3 images. First image will be used as the main
                product image.
              </p>

              <div class="image-upload-container">
                <!-- Image Upload Box 1 -->
                <div class="image-upload-box">
                  <i class="fas fa-cloud-upload-alt"></i>
                  <p>Main Image</p>
                  <input
                    id="image1"
                    name="image"
                    type="file"
                    accept="image/*"
                    onchange="handleImageUpload(this, 0)"
                  />
                  <img class="image-preview" id="preview-0" />
                </div>

                <!-- Image Upload Box 2 -->
                <div class="image-upload-box">
                  <i class="fas fa-cloud-upload-alt"></i>
                  <p>Image 2</p>
                  <input
                    id="image2"
                    name="image"
                    type="file"
                    accept="image/*"
                    onchange="handleImageUpload(this, 1)"
                  />
                  <img class="image-preview" id="preview-1" />
                </div>

                <!-- Image Upload Box 3 -->
                <div class="image-upload-box">
                  <i class="fas fa-cloud-upload-alt"></i>
                  <p>Image 3</p>
                  <input
                    id="image3"
                    name="image"
                    type="file"
                    accept="image/*"
                    onchange="handleImageUpload(this, 2)"
                  />
                  <img class="image-preview" id="preview-2" />
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button
                type="button"
                class="btn btn-secondary"
                onclick="handleCancel()"
              >
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">
                Save Product
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    `;
    <!-- Page Specific Scripts -->
    <script src="/admin/js/addProduct.js"></script>
  </body>
</html>
