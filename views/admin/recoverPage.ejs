<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/recycle.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <h1>Recover</h1>
          <!-- Rest of your page content -->
          <div class="customers-container">
           
           <%if(products){%> 
            <% products.forEach( (prod, index)=>{ %>
              <div class="customer-card">
                <div class="product-image">
                  <img
                    src="data:image/<%=prod.images[0].contentType%>;base64,
                        <%=prod.images[0].data.toString('base64')%>"
                  />
                </div>
                <div>
                <h3 class="customer-name"><%- prod.product_name %></h3>
                
                <div class="customer-info">
                  <span class="info-label">Price:</span>
                  <span class="info-value"><%-prod.price%></span>
                </div>
                
                
                <button class="block-btn blocked" onclick="unblockUser('<%- prod._id %>')">Recover</button>
              </div>
            <%})%>
           <%}%> 
          
          </div>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/recover.js"></script>
    <!-- Load Common Components -->
  </body>
</html>
