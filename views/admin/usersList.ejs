<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/userManagement.css" />
    <link rel="stylesheet" href="/confirmModal.css">
    <link rel="stylesheet" href="/message.css">
  </head>
  <body>
    <%- include('../partials/confirmModal.ejs') %>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <h1>Customers</h1>
          <!-- Rest of your page content -->
          <div class="customers-container">
           
           <%if(users){%> 
            <% users.forEach( (user, index)=>{ %>
              <div class="customer-card">
                <div>
                  <span class="customer-number"><%- index+1 %></span>
                <h3 class="customer-name"><%- user.firstname %> <%-user.lastname%></h3>
                
                <div class="customer-info">
                  <span class="info-label">Email:</span>
                  <span class="info-value"><%-user.email%></span>
                </div>
                
                <div class="customer-info">
                  <span class="info-label">Mobile:</span>
                  <span class="info-value"><%-user.mobile%></span>
                </div>
                </div>
                
                <% if(user.coupon){ %>
                    <p class="coupon-code-exist-msg">Coupon code : <%- user.coupon.code + " " + user.coupon.discountValue+"%" %></p>
                  <% }else{ %>
                    <button class="trigger-btn" onclick="openCouponModal('<%- user._id %>')">Add coupon</button>
                <% } %>

                <% if(user.isBlocked){ %>
                  <button class="block-btn blocked" onclick="unblockUser('<%- user._id %>')">Unblock Customer</button>
                  <% }else{ %>
                    <button class="block-btn" onclick="blockUser('<%- user._id %>')">Block Customer</button>
                <% } %>
              </div>
            <%})%>
           <%}%> 
          
          </div>
        </div>
      </main>
    </div>

     <!-- Modal Overlay -->
     <div class="modal-overlay" id="modalOverlay">
      <div class="modal">
          <div class="modal-header">
              <h2 class="modal-title">Add Coupon</h2>
          </div>
          
          <div class="coupon-list">
              <!-- Coupon Items -->
               <% if(coupons) { %>
                <% coupons.forEach(cpn => { %>
                  <div class="coupon-item">
                    <input type="radio" name="coupon" class="coupon-radio" id="coupon1" value="<%-cpn._id%>">
                    <div class="coupon-details">
                        <div class="coupon-code"><%- cpn.code %></div>
                        <div class="coupon-description"><%- cpn.discountValue %>% off on your purchase</div>
                    </div>
                  </div>
                <%  }) %>
                <% } else { %>
                  <p>Coupon not available.</p>
                <% } %>
              
<!-- 
              <div class="coupon-item">
                  <input type="radio" name="coupon" class="coupon-radio" id="coupon3">
                  <div class="coupon-details">
                      <div class="coupon-code">WELCOME10</div>
                      <div class="coupon-description">$10 off for new users</div>
                  </div>
              </div> -->
          </div>

          <div class="modal-footer">
              <button class="btn-coupon btn-cancel" onclick="closeCouponModal()">Cancel</button>
              <button class="btn-coupon btn-apply" onclick="applyCoupon()">Apply Coupon</button>
          </div>
      </div>
  </div>

    
    <script src="/confirmModal.js"></script>
    <script src="/flashMessage.js"></script>
    <!-- Common Scripts -->
    <script src="common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/customers.js"></script>
    <!-- Load Common Components -->
  </body>
</html>
