<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/product.css" />
  </head>
  <body>
    <div class="container">
      <!-- Include Sidebar -->
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>

          <div class="products-header">
            <h1>Products</h1>
            <a href="product/add" class="add-product-btn">
              <i class="fas fa-plus"></i>
              Add New Product
            </a>
          </div>
          <div class="search-bar">
            <input
              type="text"
              class="search-input"
              placeholder="Search products..."
            />
            <select class="filter-select">
              <option value="">All Categories</option>
              <option value="electronics">Electronics</option>
              <option value="clothing">Clothing</option>
              <option value="accessories">Accessories</option>
            </select>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-grid">
          <!-- Product Card 1 -->
          <% if(allProducts.length > 0){ %> <% allProducts.forEach( (prod) =>
          {%>
          <div class="product-card">
            <div class="product-image">
              <img
                src="data:image/<%=prod.images[0].contentType%>;base64,
                    <%=prod.images[0].data.toString('base64')%>"
              />
            </div>
            <div class="product-details">
              <div class="product-title"><%- prod.product_name %></div>
              <div class="product-color">
                <div
                  class="color-circle"
                  style="background-color: #<%- prod.color.color_code %>"
                ></div>
                <p><%- prod.color.color_name %></p>
              </div>
              <div class="product-price">â‚¹ <%- prod.price %></div>
              <div class="product-stock">
                In Stock: <%- prod.quantity %> units
              </div>
              <div class="product-actions">
                <a
                  href="/admin/product/edit?id=<%- prod._id %>"
                  class="action-btn edit-btn"
                >
                  <i class="fas fa-edit"></i>
                  Edit
                </a>
                <button
                  class="action-btn delete-btn"
                  onclick="deleteProduct(event, '<%- prod._id %>')"
                >
                  <i class="fas fa-trash"></i>
                  Delete
                </button>
              </div>
            </div>
          </div>
          <% }) %> <% } %>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/products.js"></script>
  </body>
</html>
