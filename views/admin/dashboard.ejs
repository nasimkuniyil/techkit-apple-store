<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoreAdmin - Products</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css">
    <link rel="stylesheet" href="/admin/common/sidebar.css">
    <link rel="stylesheet" href="/admin/common/header.css">
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/dashboard.css">
</head>
<body>
    <div class="container">
        <div id="sidebar-placeholder">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <main class="main-content">
            <!-- Include Header -->
            <div id="header-placeholder">
                <div class="header">
                    <div class="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </div>
                    <div class="admin-info">
                        <div class="admin-avatar">A</div>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- Page Specific Content -->
            <div class="products-header">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total Sales</h3>
                        <div class="value">$24,589</div>
                    </div>
                    <div class="stat-card">
                        <h3>Total Orders</h3>
                        <div class="value">1,243</div>
                    </div>
                    <div class="stat-card">
                        <h3>Total Products</h3>
                        <div class="value">847</div>
                    </div>
                    <div class="stat-card">
                        <h3>Active Customers</h3>
                        <div class="value">2,891</div>
                    </div>
                </div>
    
                <div class="recent-activity">
                    <div class="activity-header">
                        <h2>Recent Activity</h2>
                        <a href="#" style="color: var(--accent-color); text-decoration: none;">View All</a>
                    </div>
                    <ul class="activity-list">
                        <li class="activity-item">
                            <span>New order #1234 from John Doe</span>
                            <span style="color: var(--text-secondary);">2 min ago</span>
                        </li>
                        <li class="activity-item">
                            <span>Product "iPhone 13" stock updated</span>
                            <span style="color: var(--text-secondary);">15 min ago</span>
                        </li>
                        <li class="activity-item">
                            <span>New customer registration</span>
                            <span style="color: var(--text-secondary);">1 hour ago</span>
                        </li>
                        <li class="activity-item">
                            <span>Order #1233 has been completed</span>
                            <span style="color: var(--text-secondary);">2 hours ago</span>
                        </li>
                    </ul>
                </div>
            </div>
        </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/dashboard.js"></script>
</body>
</html>