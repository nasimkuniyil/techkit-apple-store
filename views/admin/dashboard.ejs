<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StoreAdmin - Products</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <!-- Common Styles -->
    <link rel="stylesheet" href="/admin/common/styles.css" />
    <link rel="stylesheet" href="/admin/common/sidebar.css" />
    <link rel="stylesheet" href="/admin/common/header.css" />
    <!-- Page Specific Styles -->
    <link rel="stylesheet" href="/admin/css/dashboard.css" />
  </head>
  <body>
    <div class="container">
      <div id="sidebar-placeholder">
        <%- include('./partials/sidebar.ejs') %>
      </div>

      <main class="main-content">
        <!-- Include Header -->
        <div id="header-placeholder">
          <div class="header">
            <div class="menu-toggle">
              <i class="fas fa-bars"></i>
            </div>
            <div class="admin-info">
              <div class="admin-avatar">A</div>
              <span>Admin</span>
            </div>
          </div>
        </div>

        <!-- Page Specific Content -->
        <div class="products-header">
          <div class="header-section">
            <h1 class="page-title">Dashboard</h1>
            <div>
              <button onclick="generateReport()">Download Report</button>
            </div>
          </div>
          <header class="header">
            <div class="filters">
              <button class="filter-btn active" onclick="updatePeriod('daily')">
                Daily
              </button>
              <button class="filter-btn" onclick="updatePeriod('weekly')">
                Weekly
              </button>
              <button class="filter-btn" onclick="updatePeriod('monthly')">
                Monthly
              </button>
              <button class="filter-btn" onclick="updatePeriod('yearly')">
                Yearly
              </button>
              <button class="filter-btn" onclick="toggleCustomDate()">
                Custom Date
              </button>
              <div
                class="date-inputs"
                id="customDateInputs"
                style="display: none"
              >
                <input type="date" class="date-input" id="startDate" />
                <span>to</span>
                <input type="date" class="date-input" id="endDate" />
              </div>
            </div>
          </header>
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-title">Total Sales</div>
              <div class="stat-value" id="total-sales">₹0</div>
              <!-- <div class="stat-change positive">↑ 12.5% vs previous period</div> -->
            </div>
            <div class="stat-card">
              <div class="stat-title">Orders</div>
              <div class="stat-value" id="total-orders">0</div>
              <!-- <div class="stat-change positive">↑ 8.3% vs previous period</div> -->
            </div>
            <div class="stat-card">
              <div class="stat-title">Average Order Value</div>
              <div class="stat-value" id="avg-order-value">₹0</div>
              <!-- <div class="stat-change positive">↑ 3.8% vs previous period</div> -->
            </div>
            <!-- <div class="stat-card">
              <div class="stat-title">Conversion Rate</div>
              <div class="stat-value" id="conversion-rate">2.84%</div>
              <div class="stat-change negative">↓ 1.2% vs previous period</div>
            </div> -->
          </div>

          <div class="charts-grid">
            <!-- <div class="chart-container">
              <h2 style="margin-bottom: 1rem">Sales Trend</h2>
              <canvas id="salesChart"></canvas>
            </div> -->
            <div class="chart-container">
              <h2 style="margin-bottom: 1rem">Top Products</h2>
              <canvas id="productsChart"></canvas>
            </div>
          </div>

          <div class="table-container">
            <h2 style="margin-bottom: 1rem">Detailed Sales Report</h2>
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Orders</th>
                  <th>Revenue</th>
                  <th>Avg. Order Value</th>
                  <th>Conversion Rate</th>
                </tr>
              </thead>
              <tbody id="reportTable">
                <!-- Table data will be dynamically inserted here -->
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>

    <!-- Common Scripts -->
    <script src="/admin/common/scripts.js"></script>
    <!-- Page Specific Scripts -->
    <script src="/admin/js/dashboard.js"></script>
  </body>
</html>
